@model UI.Models.Users
@{
    Layout = "~/Views/User/Shared/Layout.cshtml";
}

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <div>
        <strong>Name:</strong> @Model.Name<br />
        <strong>Email:</strong> @Model.Email<br />
        <strong>Role:</strong> @Model.Role<br />
    </div>

    <form asp-action="DeleteUserPost" method="post" class="mt-3">
        <input type="hidden" asp-for="Userid" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="GetAllUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
