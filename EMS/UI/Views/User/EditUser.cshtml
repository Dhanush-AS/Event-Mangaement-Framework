@model UI.Models.Users
@{
    Layout = "~/Views/User/Shared/Layout.cshtml";
}

<h2>Edit User</h2>

<form asp-action="UpdateUser" asp-route-id="@Model.Userid" method="post">
    <input type="hidden" asp-for="Userid" />
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <input asp-for="Role" class="form-control" required />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="GetAllUsers" class="btn btn-secondary">Cancel</a>
</form>
