@model UI.Models.EventDetails

<h2>Add Event</h2>

<form asp-action="SaveEvent" method="post">
    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="EventCategory"></label>
        <select asp-for="EventCategory" class="form-control" required>
            <option value="">Select Event Category</option>
            <option value="Tech & Innovation">Tech & Innovation</option>
            <option value="Business">Business</option>
            <option value="Industries">Industries</option>
        </select>
        <span asp-validation-for="EventCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control" type="date" required />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" required>
            <option value="">Select Event Status</option>
            <option value="Active">Active</option>
            <option value="InActive">InActive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Event</button>
</form>
