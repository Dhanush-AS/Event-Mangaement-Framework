@model IEnumerable<UI.Models.Registration>

@{
    ViewData["Title"] = "All Registrations";
}
<style>
    .status-approved {
        color: green;
    }

    .status-denied {
        color: red;
       
    }

    .status-pending {
       color: blue;
        
    }

</style>
<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Participant Name</th>
            <th>Email</th>
            <th>Event ID</th>
            <th>Status Approval</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var registration in Model)
        {
            <tr>
                <td>@registration.regId</td>
                <td>@registration.FirstName</td>
                <td>@registration.Email</td>
                <td>@registration.EventId</td>
                <td class="
    @(registration.RegStatus == "Approved" ? "status-approved" :
      registration.RegStatus == "Denied" ? "status-denied" :
      registration.RegStatus == "Pending" ? "status-pending" : "")">
                    @registration.RegStatus
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Get", "Home")" class="btn btn-success">Register for an Event</a>
</p>
