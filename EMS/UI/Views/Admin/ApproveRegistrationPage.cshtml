@model UI.Models.Registration

<h2>Edit Registration</h2>

<form asp-action="UpdateRegistrationStatus" asp-route-id="@Model.regId" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CountryCode"></label>
        <input asp-for="CountryCode" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
    </div>

    <!-- Display current status in a read-only input -->
    <div class="form-group">
        <label asp-for="RegStatus"></label>
        <input asp-for="RegStatus" class="form-control" readonly />
    </div>

    <input type="hidden" asp-for="EventId" />
    <input type="hidden" asp-for="regId" />

    <!-- Hidden input for RegStatus -->
    <input type="hidden" name="RegStatus" id="RegStatus" value="@Model.RegStatus" />

    <!-- Approve and Deny buttons -->
    <button type="submit" class="btn btn-success" onclick="setStatus('Approved')">Approve</button>
    <button type="submit" class="btn btn-danger" onclick="setStatus('Denied')">Deny</button>
</form>

@section Scripts {
    <script>
        function setStatus(status) {
            document.getElementById("RegStatus").value = status;
        }
    </script>
}
