
<!-- Custom Styles -->
<style>
    .dashboard-container {
        padding: 60px 0;
    }
    .dashboard-container h2 {
        font-size: 2.5rem;
        margin-bottom: 40px;
        text-align: center;
        color: #333;
    }
    .card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }
    .card-body {
        padding: 30px;
    }
    .card-title {
        font-size: 1.5rem;
        margin-bottom: 20px;
        color: #007bff;
    }
    .card-text {
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: #555;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }
</style>

<div class="container dashboard-container">
    <h2>Admin Dashboard</h2>
    <div class="row">
        <!-- Manage Events Section -->
        <div class="col-md-4 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Events</h5>
                    <p class="card-text">Create, update, and delete events.</p>
                    <a href="https://localhost:44373/Event/GetAllEvents" class="btn btn-primary">Go to Events</a>
                </div>
            </div>
        </div>


        <!-- Manage Sessions Section -->
        <div class="col-md-4 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">Create, update, and delete Users.</p>
                    <a href="@Url.Action("GetAllUsers", "User")" class="btn btn-primary">Go to  Users</a>
                </div>
            </div>
        </div>

        <!-- Manage Speakers Section -->
        <div class="col-md-4 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Registrations</h5>
                    <p class="card-text">Add, update, and assign Registrations.</p>
                    <a href="@Url.Action("GetAllRegistrations", "Registration")" class="btn btn-primary">Go to Registrations</a>
                </div>
            </div>
        </div>
    </div>
</div>
